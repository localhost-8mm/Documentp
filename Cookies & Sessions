C1Cust.php

<?php
session_start();
$_SESSION['cname']=$_GET['name'];
$_SESSION['cadd']=$_GET['add'];
$_SESSION['cno']=$_GET['num'];
?>

<html>
<body >       
        <style>
        table,tr,td{
        border :1px solid black ;
